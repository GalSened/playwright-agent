FROM python:3.10-slim

# ── OS deps (Playwright browsers + Xvfb + tzdata) ────────────────────────────
RUN apt-get update && apt-get install -y \
    wget curl unzip xvfb tzdata \
    libnss3 libatk1.0-0 libatk-bridge2.0-0 libcups2 \
    libdrm2 libxcomposite1 libxdamage1 libxfixes3 libxrandr2 \
    libgbm1 libasound2 libxshmfence1 libgtk-3-0 libx11-xcb1 \
 && apt-get clean && rm -rf /var/lib/apt/lists/*

# ── Playwright + matching browser binaries ───────────────────────────────────
RUN pip install --no-cache-dir playwright \
 && python -m playwright install --with-deps

# ── Python requirements (your project libs) ─────────────────────────────────
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ── Set PYTHONPATH so Python finds /app ─────────────────────────────────────
ENV PYTHONPATH=/app

# ── Copy project source ─────────────────────────────────────────────────────
WORKDIR /app
COPY . .

# ── Copy entry-point and ensure executable bit ──────────────────────────────
RUN install -m 755 /app/entrypoint.sh /usr/local/bin/entrypoint.sh

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
